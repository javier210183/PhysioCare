{% extends "base.njk" %}

{% block titulo %}Editar Paciente{% endblock %}

{% block contenido %}
<div class="container mt-4">
    <h1 class="mb-4">Editar Paciente</h1>
    <form action="/patients/{{ patient._id }}/edit" method="post" class="mt-3">
        <div class="mb-3">
            <label for="name" class="form-label">Nombre</label>
            <input 
                type="text" 
                name="name" 
                id="name" 
                class="form-control" 
                value="{{ patient.name }}" 
                required 
                placeholder="Introduce el nombre del paciente">
        </div>
        <div class="mb-3">
            <label for="surname" class="form-label">Apellido</label>
            <input 
                type="text" 
                name="surname" 
                id="surname" 
                class="form-control" 
                value="{{ patient.surname }}" 
                required 
                placeholder="Introduce el apellido del paciente">
        </div>
        <div class="mb-3">
            <label for="birthDate" class="form-label">Fecha de Nacimiento</label>
            <input 
                type="date" 
                name="birthDate" 
                id="birthDate" 
                class="form-control" 
                value="{{ patient.birthDate | date('yyyy-MM-dd') }}" 
                required>
        </div>
        <div class="mb-3">
            <label for="address" class="form-label">Dirección</label>
            <input 
                type="text" 
                name="address" 
                id="address" 
                class="form-control" 
                value="{{ patient.address }}" 
                placeholder="Introduce la dirección del paciente">
        </div>
        <div class="mb-3">
            <label for="insuranceNumber" class="form-label">Número de Seguro</label>
            <input 
                type="text" 
                name="insuranceNumber" 
                id="insuranceNumber" 
                class="form-control" 
                value="{{ patient.insuranceNumber }}" 
                required 
                placeholder="Introduce el número de seguro">
        </div>
        <div class="mt-4">
            <button type="submit" class="btn btn-success">Guardar Cambios</button>
            <a href="/patients" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
{% endblock %}
